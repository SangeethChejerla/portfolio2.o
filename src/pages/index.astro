---
import Contact from "@/components/Contact.astro";
import FeaturedPosts from "@/components/FeaturedPosts.astro";
import Journey from "@/components/Journey.astro";
import StackItem from "@/components/StackItem.astro";
import Layout from "@/layouts/Layout.astro";
import '@/styles/global.css';
---
<Layout title="Sangeeth Reddy - Full Stack Engineer">
<main class="max-w-3xl mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row justify-between items-start gap-8">
    <div class="flex flex-col md:flex-row items-center gap-4">
      <img
        src="/oreki.jpg"
        alt="Profile picture of Sangeeth Reddy"
        class="object-cover w-36 h-36 rounded-full shadow-lg"
      />
      <div class="text-center md:text-left">
        <h1 class="text-3xl font-bold text-white">Sangeeth Reddy</h1>
        <p class="text-lg text-white mt-2">
          Full Stack Engineer and AI Enthusiast
        </p>
        <p class="text-sm text-white mt-1">Singarayakonda, India</p>
      </div>
    </div> 
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-semibold text-white mb-4">About</h2>
    <p class="text-lg text-white leading-relaxed">
   Challenging  limits and opening doors to innovative solutions.
    </p>
  </div>

  <div class="mt-8">
<Journey/>
  </div>
  <div class="mt-8">
    <StackItem/>
  </div>
  <div class="mt-8">
    <FeaturedPosts />
  </div>

  <div class="mt-8">
    <Contact/>
  </div>
</main>
</Layout>
     