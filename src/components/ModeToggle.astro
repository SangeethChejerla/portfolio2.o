---
import { Button } from '@/components/ui/button'
import { Moon } from 'lucide-react'
---

<Button variant="ghost" size="icon" id="themeToggle">
  <Moon className="h-5 w-5" />
  <span class="sr-only">Dark mode</span>
</Button>

<script is:inline>
  // Automatically apply dark mode and save the preference
  const theme = 'dark';
  document.documentElement.classList.add('dark');
  localStorage.setItem('theme', theme);

  // Optional: If you want to keep the button for future use
  document.getElementById('themeToggle')?.addEventListener('click', () => {
    // Button functionality removed since we're enforcing dark mode only
    // This can be used later if you plan to have other functionalities
  });
</script>
